{
   "$schema": "http://json-schema.org/draft-04/schema#",
   "extends": "@vue/tsconfig/tsconfig.web.json",
   "jsx": "preserve",
   "jsxFactory": "h",
   "jsxFragmentFactory": "Fragment",
   "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "auto-imports.d.tsx", "components.d.ts", "./src/*"],
   "compilerOptions": {
      "jsx": "preserve",
      "ignoreDeprecations": "5.0",
      "baseUrl": ".",
      "paths": {
         "@/*": ["./src/*"],
         "@build/*": ["build/*"]
      }
   },

   "references": [
      {
         "path": "./tsconfig.node.json"
      }
   ]
}
